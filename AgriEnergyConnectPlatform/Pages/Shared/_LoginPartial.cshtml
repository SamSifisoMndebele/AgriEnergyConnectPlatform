@using System.Security.Claims

<ul class="navbar-nav mr-2">
    @if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Auth/Profile" title="Manage">
                Hello @(User.IsInRole("Employee") ? "Employee" : "Farmer"): @User.Identity.Name @User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Surname)?.Value
            </a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Auth/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Auth/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Auth/Login">Login</a>
        </li>
    }
</ul>