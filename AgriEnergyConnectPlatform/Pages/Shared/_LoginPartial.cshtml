@using System.Security.Claims

<div class="mr-2 flex-row d-flex">
    @if (User.Identity is { IsAuthenticated: true })
    {
        <a class="nav-link active text-light" asp-page="/Auth/Profile" title="Profile">
            <i class="far fa-circle-user fa-2x"></i>
            Hello @(User.IsInRole("Employee") ? "Employee" : "Farmer"): @User.Identity.Name @User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Surname)?.Value
        </a>
        <form class="form-inline" asp-page="/Auth/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
            <button type="submit" class="nav-link btn btn-link active text-light">Logout</button>
        </form>
    }
    else
    {
        <a class="nav-link active text-light" asp-page="/Auth/Register">Register</a>
        <a class="nav-link active text-light" asp-page="/Auth/Login">Login</a>
    }
</div>