    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            background-color: #00572B;
        }
        .sidebar {
            height: 100vh;
            width: 300px;
            position: fixed;
            top: 0;
            left: 0;
            background-image: linear-gradient(to bottom, #067c40 48%, #4FA577 90%);
            color: #bad92f;
            padding-top: 20px;
            transition: 0.3s;
        }

        .top-bar {
            position: fixed;
            top: 30px;
            right: 30px;
            left: 200px;
            height: 50px;
            background-color: #0000;
            color: black;
            font-size: 20px;
            display: flex;
            justify-content: flex-end;
            align-items: center;
            padding: 0 20px;
            z-index: 1000;
        }

        .top-bar2 a {
            color: #3bb433;
            text-decoration: none;
            padding: 10px;
            margin-left: 10px;
        }

        .top-bar a {
            color: #3bb433;
            text-decoration: none;
            padding: 10px;
            margin-left: 10px;
        }

        .top-bar a:hover {
            color: #3bb433;
        }

        .sidebar .navbar-brand {
            text-align: center;
            margin-bottom: 20px;
        }

        .sidebar a {
            color: white;
            padding: 10px 15px;
            text-decoration: none;
            display: block;
            text-align: center;
            font-size: 20px;
        }

        .sidebar a:hover {
            background-color: white;
            color: green;
        }

        .content {
            margin-left: 300px;
            padding: 20px;
        }

        @@media (max-width: 768px) {
            .sidebar {
                width: 100%;
                height: auto;
                position: relative;
                padding-top: 10px;
            }
    
            .top-bar {
                position: relative;
                left: 0;
                right: 0;
                top: 0;
                margin-bottom: 20px;
            }
    
            .content {
                margin-left: 0;
                padding: 10px;
            }
    
            .sidebar .navbar-brand img {
                height: 150px !important;
            }
        }

        @@media (max-width: 576px) {
            .top-bar {
                font-size: 16px;
                padding: 0 10px;
            }

            .sidebar a {
                font-size: 16px;
                padding: 8px 10px;
            }

            .content {
                padding: 5px;
            }
        }

    </style>
</head>
<body>
