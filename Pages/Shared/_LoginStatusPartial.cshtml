@using System.Security.Claims
@if (User.Identity.IsAuthenticated)
{
    <form method="post" class="form-check-inline" asp-page="/Auth/Logout">
        Welcome @(User.IsInRole("Employee") ? "Employee" : "Farmer"): @User.Identity.Name @User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Surname)?.Value
        <button type="submit" class="ml-2 btn btn-link">Logout</button>
    </form>
}
else
{
    <a class="btn btn-link" asp-page="/Auth/Login">Login</a>
}